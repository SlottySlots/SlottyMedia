<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DotNetToolsPath Condition="'$(OS)' == 'Windows_NT'">%USERPROFILE%\.dotnet\tools</DotNetToolsPath>
        <DotNetToolsPath Condition="'$(OS)' != 'Windows_NT'">$HOME/.dotnet/tools</DotNetToolsPath>
    </PropertyGroup>
    
    <ItemGroup>
      <Folder Include="wwwroot\static\login\" />
      <Folder Include="Backend\Models\" />
      <Folder Include="Backend\Services\" />
      <Folder Include="Backend\ViewModel\" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Components" Version="8.0.7" />
    </ItemGroup>

    <Target Name="GenerateDocumentation" AfterTargets="Build">
        <Exec Command="$(DotNetToolsPath)/xmldoc2md ./bin/Debug/net8.0/SlottyMedia.dll ../slottymedia-docs/docs/code" />
    </Target>
    
</Project>
