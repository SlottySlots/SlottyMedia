@page "/"
@using SlottyMedia.Backend.Services.Interfaces
@using SlottyMedia.Backend.ViewModel.Interfaces
@inject IHomePageVm ViewModel
@inject IAuthService AuthService
@inject NavigationManager NavigationManager


<PageTitle>Slotty Media | Home</PageTitle>


@if (AuthService.IsAuthenticated())
{
    <PostSubmissionForm/>
}


@foreach (var post in ViewModel!.Posts)
{
    <Post Dto="post" CurrentUserId=@_currentUserId OnPostClick="() => _navigateToPostPage(post.PostId)"/>
}

@code
{
    private Guid _currentUserId;
    protected override async Task OnInitializedAsync()
    {
        var _currentSession = AuthService.GetCurrentSession();
        _currentUserId = Guid.Parse(_currentSession!.User!.Id!);
        await ViewModel.FetchPosts();
    }

    private void _navigateToPostPage(Guid postId) => NavigationManager.NavigateTo($"/post/{postId}");
}