<div class="relative w-screen h-screen flex justify-center items-center bg-black">
    
    <!-- Background image -->
    <img src="static/login/background.webp" alt="" class="absolute w-full h-full opacity-50 z-[0] select-none pointer-events-none"/>

    <!-- Content in center -->
    <div class="w-full max-w-screen-lg flex z-[1]">

        <!-- Left box -->
        <div class="relative w-1/2 text-white">
            
            <!-- the content -->
            <div class="px-7 py-10">
                <h3 class="text-xl font-semibold">
